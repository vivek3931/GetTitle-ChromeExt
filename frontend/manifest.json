{
  "manifest_version": 3,
  "name": "LinkedIn Scraper",
  "version": "1.0",
  "description": "Scrapes LinkedIn profiles and sends data to local API",
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": ["https://*.linkedin.com/*", "http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scrape Profiles"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/in/*"],
      "js": ["content.js"]
    }
  ]
}
